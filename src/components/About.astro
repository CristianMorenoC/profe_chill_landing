---
import { useTranslations } from "../utils/i18n";
import LanguageProfileSelector from "./LanguageProfileSelector";

interface Props {
  lang: "en" | "es";
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="about" class="py-20 bg-transparent">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center mb-12">
      <h2
        class="text-3xl md:text-4xl font-heading font-bold text-gray-900 dark:text-white"
      >
        {t("about.title")}
      </h2>
    </div>

    <div
      class="max-w-3xl mx-auto space-y-6 text-lg text-gray-700 dark:text-gray-300 leading-relaxed mb-12"
    >
      <p>
        {t("about.intro")}
      </p>
      <p>
        {t("about.background")}
      </p>
      <p class="font-semibold">
        {t("about.approach")}
      </p>
    </div>

    <div class="max-w-5xl mx-auto">
      <div class="grid md:grid-cols-2 gap-12 items-start">
        <LanguageProfileSelector
          client:load
          title={t("about.learnLanguageTitle")}
          allowedLanguageIds={["en", "es"]}
        />
        <LanguageProfileSelector
          client:load
          title={t("about.classLanguageTitle")}
          allowedLanguageIds={["es", "en", "pt", "it", "fr"]}
          defaultLanguageId="es"
        />
      </div>
    </div>
  </div>
</section>
