---
import { useTranslations } from '../utils/i18n';

interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Gradient Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-brand-beige via-brand-sky-blue/20 to-brand-light-green/20 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900"></div>
  
  <!-- Floating Shapes (decorative) -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 left-10 w-72 h-72 bg-brand-gold/10 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-brand-orange/10 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
  </div>

  <div class="container mx-auto px-4 py-20 relative z-10">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="space-y-8 animate-fade-in">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-gray-900 dark:text-white leading-tight">
          {t('hero.title')}
        </h1>
        
        <p class="text-lg md:text-xl text-gray-700 dark:text-gray-300 leading-relaxed">
          {t('hero.subtitle')}
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <a 
            href="#contact"
            class="group px-8 py-4 bg-brand-sky-blue hover:bg-brand-sky-blue/90 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 text-center"
          >
            {t('hero.ctaPrimary')}
          </a>
          
          <a 
            href="#about"
            class="px-8 py-4 bg-white dark:bg-slate-800 hover:bg-gray-50 dark:hover:bg-slate-700 text-gray-900 dark:text-white font-semibold rounded-lg shadow-md hover:shadow-lg border border-gray-200 dark:border-gray-700 transition-all duration-300 text-center"
          >
            {t('hero.ctaSecondary')}
          </a>
        </div>
      </div>

      <!-- Hero Image/Illustration -->
      <div class="relative animate-float">
        <div class="relative aspect-square max-w-lg mx-auto">
          <!-- Placeholder for hero image -->
          <div class="absolute inset-0 bg-gradient-to-br from-brand-sky-blue to-brand-light-green rounded-3xl shadow-2xl flex items-center justify-center">
            <div class="text-center text-white p-8">
              <svg class="w-64 h-64 mx-auto opacity-20" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
              </svg>
              <p class="mt-4 text-sm opacity-60">[Hero Image Placeholder]</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }
</style>

